
<div class="Search" style="">
  <%= form_tag dishes_path, method: :get do %>
      <%= text_field_tag :name, params[:name],placeholder: "Search" %> 
      <%= select_tag :sort_by_created_at, options_for_select([['Decrease','ASC'],['Increase','DESC']])%>
      <%= submit_tag 'Search' %>  
    <%end%>     
</div>
<div class="container">
  <div class="row">
    <%= render @dishes %>
  </div>
</div>
